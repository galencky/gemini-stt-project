# Gemini STT Configuration Example
# Copy this file to .env and fill in your values

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
HACKMD_TOKEN=your_hackmd_token_here

# Google Drive Configuration
GDRIVE_SERVICE_ACCOUNT_JSON=/path/to/your/service-account-key.json
TO_BE_TRANSCRIBED_FOLDER_ID=your_google_drive_folder_id
TRANSCRIBED_FOLDER_ID=your_google_drive_folder_id
PROCESSED_FOLDER_ID=your_google_drive_folder_id
SYSTEM_PROMPT_DOC_ID=1p44XUpBu7lPjyux4eANd_9FHT5F1UDbgUyx7q6Libvk

# Email Configuration (optional)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_TO=recipient@email.com

# Local Processing Configuration
PROCESS_LOCAL_AUDIO=false
AUDIO_INPUT_DIR=C:\Users\yourusername\Videos\audio_strip\audio_only
PROCESS_VIDEOS=false
VIDEO_INPUT_DIR=C:\Users\yourusername\Videos\audio_strip

# Google Drive Organization
ORGANIZE_TO_FOLDERS=true
UPLOAD_AUDIO_TO_DRIVE=false  # Audio files are usually too large

# Audio Processing Configuration
CHUNK_DURATION_SECONDS=300
VIDEO_AUDIO_FORMAT=m4a
VIDEO_AUDIO_BITRATE=192k
VIDEO_AUDIO_SAMPLERATE=44100